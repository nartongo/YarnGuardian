<UserControl x:Class="YarnGuardian.UI.ControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:YarnGuardian.UI"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="400">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button x:Name="StartButton" Content="启动" Width="120" Height="40" Margin="10" Click="StartButton_Click"/>
            <Button x:Name="StopButton" Content="停止" Width="120" Height="40" Margin="10" Click="StopButton_Click"/>
        </StackPanel>
    </Grid>
</UserControl> 